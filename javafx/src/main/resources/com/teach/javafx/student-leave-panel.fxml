<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<BorderPane  xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"  prefWidth="800.0" fx:controller="com.teach.javafx.controller.StudentLeaveController">
    <top>
        <HBox id="HBox" alignment="CENTER_LEFT" spacing="5.0">
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
            <FlowPane prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                <Button fx:id="addButton" mnemonicParsing="false" onAction="#onAddButtonClick" text="添加">
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </FlowPane.margin>
                </Button>
            </FlowPane>
            <Pane HBox.hgrow="ALWAYS"/>
            <FlowPane alignment="TOP_RIGHT" prefHeight="40.0" prefWidth="400.0" BorderPane.alignment="CENTER">
                <Label fx:id="stateLabel" prefWidth="49.0" text="审核状态">
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </FlowPane.margin>
                </Label>
                <ComboBox fx:id="stateComboBox" prefWidth="100.0">
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </FlowPane.margin>
                </ComboBox>
                <Label fx:id="searchLabel" prefWidth="49.0" text="关键字">
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </FlowPane.margin>
                </Label>
                <TextField fx:id="searchTextField" prefWidth="100.0">
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </FlowPane.margin>
                </TextField>
                <Button mnemonicParsing="false" onAction="#onQueryButtonClick" text="查询">
                    <FlowPane.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </FlowPane.margin>
                </Button>
            </FlowPane>
        </HBox>
    </top>
    <center>
        <SplitPane dividerPositions="0.7,0.3">
            <items>
                <TableView fx:id="dataTableView" >
                    <columns>
                        <TableColumn fx:id="studentNumColumn" prefWidth="100.0" text="学号" />
                        <TableColumn fx:id="studentNameColumn" prefWidth="70.0" text="姓名" />
                        <TableColumn fx:id="teacherNameColumn" prefWidth="200.0" text="指导老师" />
                        <TableColumn fx:id="leaveDateColumn" prefWidth="150.0" text="请假日期" />
                        <TableColumn fx:id="reasonColumn" prefWidth="150.0" text="请假理由" />
                        <TableColumn fx:id="stateNameColumn" prefWidth="100.0" text="审核状态" />
                        <TableColumn fx:id="teacherCommentColumn" prefWidth="125.0" text="老师审核意见" />
                        <TableColumn fx:id="adminCommentColumn" prefWidth="125.0" text="管理员审核意见" />
                    </columns>
                </TableView>
                <VBox alignment="TOP_CENTER" spacing="20.0" >
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                    <GridPane hgap="10.0">
                        <columnConstraints>
                            <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" maxWidth="124.0" minWidth="10.0" prefWidth="67.0" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="193.0" minWidth="10.0" prefWidth="193.0" />
                            <ColumnConstraints hgrow="SOMETIMES" maxWidth="100" minWidth="10.0" prefWidth="100" />
                        </columnConstraints>
                        <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                        </rowConstraints>
                        <Label text="学号" GridPane.rowIndex="0" />
                        <TextField fx:id="studentNumField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                        <Label text="姓名" GridPane.rowIndex="1" />
                        <TextField fx:id="studentNameField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                        <Label text="指导老师" GridPane.rowIndex="2" />
                        <ComboBox fx:id="teacherComboBox" GridPane.columnIndex="1" GridPane.rowIndex="2" />
                        <Label text="请假日期" GridPane.rowIndex="3" />
                        <TextField fx:id="leaveDateField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
                        <Label text="理由" GridPane.rowIndex="4" />
                        <TextField fx:id="reasonField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                        <Label text="老师意见" GridPane.rowIndex="5" />
                        <TextField fx:id="teacherCommentField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
                        <Label text="管理员意见" GridPane.rowIndex="6" />
                        <TextField fx:id="adminCommentField" GridPane.columnIndex="1" GridPane.rowIndex="6" />
                    </GridPane>
                    <FlowPane alignment="CENTER" columnHalignment="CENTER" prefHeight="36.0">
                        <Button fx:id="saveButton" onAction="#onSaveButtonClick" text="保存" >
                            <FlowPane.margin>
                                <Insets right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </Button>
                        <Button fx:id="submitButton" onAction="#onSubmitButtonClick" text="提交" >
                            <FlowPane.margin>
                                <Insets right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </Button>
                        <Button fx:id="passButton" onAction="#onPassButtonClick" text="审核通过" >
                            <FlowPane.margin>
                                <Insets right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </Button>
                        <Button fx:id="notPassButton" onAction="#onNotPassButtonClick" text="审核不通过" >
                            <FlowPane.margin>
                                <Insets right="5.0" top="5.0" />
                            </FlowPane.margin>
                        </Button>
                    </FlowPane>
                </VBox>
            </items>
        </SplitPane>
    </center>
</BorderPane>
